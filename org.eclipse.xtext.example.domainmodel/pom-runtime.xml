	<groupId>p2.osgi.bundle</groupId>
	<artifactId>org.xtext.example.domainmodel</artifactId>
	<packaging>eclipse-plugin</packaging>
	<name>org.xtext.example.domainmodel - Runtime</name>

	<properties>
		<platform-version-name>indigo</platform-version-name>
	</properties>

	<modules>
	</modules>
	<build>
		<plugins>
			<!-- 
			<plugin>
				<groupId>org.eclipselabs.xtext.utils</groupId>
				<artifactId>xtend-maven-plugin</artifactId>
				<version>1.0.0-SNAPSHOT</version>
				<configuration>
				</configuration>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
							<goal>compile</goal>
							</goals>
						</execution>
					</executions>
			</plugin>
			 -->
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>src-gen</directory>
							<includes>
								<include>**</include>
							</includes>
							<excludes>
								<exclude>.gitignore</exclude>
							</excludes>
						</fileset>
						<fileset>
							<directory>xtend-gen</directory>
							<includes>
								<include>**</include>
							</includes>
							<excludes>
								<exclude>.gitignore</exclude>
							</excludes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.fornax.toolsupport</groupId>
				<artifactId>fornax-oaw-m2-plugin</artifactId>
				<version>3.3.0-SNAPSHOT</version>
				<executions>
					<!-- 
					<execution>
						<id>xtext</id>
						<configuration>
							<workflowDescriptor>org.eclipse.xtext.example.domainmodel.GenerateDomainmodelLanguage</workflowDescriptor>
							<timestampFileName>xtext-generator.timestamp</timestampFileName>
						</configuration>
					</execution>
					 -->
					<execution>
						<id>xtend</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run-workflow</goal>
						</goals>
						<configuration>
							<workflowDescriptor>org.eclipselabs.xtext.xtend2.compiler.CompilerWorkflow</workflowDescriptor>
							<timestampFileName>xtend-generator.timestamp</timestampFileName>
							<jvmSettings>
								<fork>true</fork>
								<jvmArgs>
									<jvmArg>-Xms100m</jvmArg>
									<jvmArg>-Xmx700m</jvmArg>
									<jvmArg>-XX:MaxPermSize=128m</jvmArg>
									<jvmArg>-Dlog4j.configuration=file:${basedir}/log4j.properties</jvmArg>
								</jvmArgs>
							</jvmSettings>
							<properties>
								<targetDir>${project.build.directory}/generated/xtend</targetDir>
							</properties>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
